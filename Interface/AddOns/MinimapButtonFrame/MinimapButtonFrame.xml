							<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="50" y="-100"/>
							</Offset>
						</Anchor>
						</Anchors>
						<Scripts>
							<OnLoad>
								getglobal(this:GetName().."Text"):SetText(MBF_CONFIG_Locked);
							</OnLoad>
							<OnClick>
								MBFC_LockedToggle();
							</OnClick>
						</Scripts>
						</CheckButton>
						<CheckButton name="MBFCSortbyRows" inherits="OptionsCheckButtonTemplate">
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset>
										<AbsDimension x="50" y="-140"/>
									</Offset>
								</Anchor>
							</Anchors>
