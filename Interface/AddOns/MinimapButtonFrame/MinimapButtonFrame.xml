							</Size>
							<Anchors>
								<Anchor point="TOPLEFT">
										<Offset>
											<AbsDimension x="350" y="-40"></AbsDimension>
										</Offset>
								</Anchor>
							</Anchors>
							<ColorWheelTexture name="CPColorPickerWheel">
								<Size>
									<AbsDimension x="60" y="60"/>
								</Size>
								<Anchors>
									<Anchor point="LEFT">
										<Offset>
											<AbsDimension x="7" y="4"/>
										</Offset>
									</Anchor>
								</Anchors>
							</ColorWheelTexture>
