									getglobal(this:GetName().."Text"):SetText(MBF_CONFIG_Scale);
									this:SetMinMaxValues(0.50, 2);
									getglobal(this:GetName().."Low"):SetText(.50);
									getglobal(this:GetName().."High"):SetText(2);
									this:SetValueStep(.05);
