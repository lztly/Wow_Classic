<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

<Frame name="MinimapButtonFrame" toplevel="true" parent="UIParent" movable="true" clampedToScreen="true" hidden="false" frameStrata="LOW">
	<Size x="20" y="20"/>
	<Anchors>
		<Anchor point="CENTER"/>
	</Anchors>
  <Backdrop bgFile="Interface/Tooltips/UI-Tooltip-Background" edgeFile="Interface/Tooltips/UI-Tooltip-Border" tile="true">
	<EdgeSize>
		<AbsValue val="16"/>
	</EdgeSize>
	<TileSize>
		<AbsValue val="16"/>
	</TileSize>
	<BackgroundInsets>
		<AbsInset left="5" right="5" top="5" bottom="5"/>
	</BackgroundInsets>
  </Backdrop>
  <Frames>
	<Button name="$parentDragButton" >
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="false">
		    <BackgroundInsets>
		        <AbsInset left="5" right="5" top="5" bottom="5" />
		    </BackgroundInsets>
			<TileSize>
			    <AbsValue val="10" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="10" />
			</EdgeSize>	
			<Color r="1" g="0.5" b="0.5" />
		</Backdrop>
		<Size>
			<AbsDimension x="50" y="25"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativePoint="TOPLEFT"><Offset><AbsDimension x="0" y="27"/></Offset></Anchor>
		</Anchors>
		<Scripts>
			<OnClick>
				if (IsShiftKeyDown()) then						
					MBFC_Toggle();
				elseif ( arg1 == "RightButton" ) then
					updateMBFVars();
					MBFC_Visible(1);
				end
			</OnClick>
			<OnMouseDown>
				if (arg1 == "LeftButton") then
					MBF_OnDragStart();
				end
			</OnMouseDown>
			<OnMouseUp>
				if (arg1 == "LeftButton") then
					MBF_OnDragStop();
				end
			</OnMouseUp>
			<OnEnter>
				RollUp_OnEnter();
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
		<HighlightTexture alphaMode="ADD" file="Interface\Buttons\ButtonHilight-Square"/>
	</Button>
	<Button name="$parentMoreMiniButton" hidden="true">
	</Button>	
  </Frames>
  <Scripts>
    <OnLoad>
		MBF_OnLoad();
	</OnLoad>
    <OnUpdate>
		MBF_OnUpdate(arg1);
    </OnUpdate>
    <OnEvent>
		MBF_OnEvent();
    </OnEvent>
	<OnDragStart>
		MBF_OnDragStart();
	</OnDragStart>
	<OnDragStop>
		MBF_OnDragStop();		
	</OnDragStop>
  </Scripts>
</Frame>

<Frame name="MBFC" frameStrata="DIALOG" toplevel="true" movable="true" parent="UIParent" hidden="true">
