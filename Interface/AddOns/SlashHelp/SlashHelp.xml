<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<CheckButton name="SlashHelpCheckButtonTemplate" virtual="true">
		<Size x="32" y="32"/>
		<Layers>
			<Layer level="ARTWORK">
				<FontString inherits="GameFontNormalSmall" parentKey="Text">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT">
							<Offset x="-2" y="0"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
		<PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
		<HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
		<CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
		<DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
	</CheckButton>
	<CheckButton name="SlashHelpRadioButtonTemplate" virtual="true">
		<Size x="16" y="16"/>
		<Layers>
			<Layer level="BACKGROUND">
				<FontString inherits="GameFontNormalSmall" parentKey="Text">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT">
							<Offset x="5" y="0"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<NormalTexture file="Interface\Buttons\UI-RadioButton">
			<TexCoords left="0" right="0.25" top="0" bottom="1"/>
		</NormalTexture>
		<HighlightTexture file="Interface\Buttons\UI-RadioButton" alphaMode="ADD">
			<TexCoords left="0.5" right="0.75" top="0" bottom="1"/>
		</HighlightTexture>
		<CheckedTexture file="Interface\Buttons\UI-RadioButton">
			<TexCoords left="0.25" right="0.5" top="0" bottom="1"/>
		</CheckedTexture>
	</CheckButton>

	<Button name="SlashHelpUpButtonTemplate" virtual="true">
		<Size x="180" y="12"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface\ChatFrame\ChatFrameExpandArrow" parentKey="Arrow">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD" setAllPoints="true" parentKey="Highlight">
					<Color r="1" g="1" b="1" a="0.75"/>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self.Arrow:SetTexCoord(1,0,0,0,1,1,0,1);
			</OnLoad>
		</Scripts>
	</Button>
	<Button name="SlashHelpDownButtonTemplate" virtual="true">
		<Size x="180" y="12"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface\ChatFrame\ChatFrameExpandArrow" parentKey="Arrow">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD" setAllPoints="true" parentKey="Highlight">
					<Color r="1" g="1" b="1" a="0.75"/>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self.Arrow:SetTexCoord(0,1,1,1,0,0,1,0);
			</OnLoad>
		</Scripts>
	</Button>
	<Button name="SlashHelpEntryTemplate" enableMouse="true" virtual="true">
		<Size x="180" y="12"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString inherits="GameFontHighlight" justifyH="LEFT" parentKey="CommandText">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="LEFT"/>
					</Anchors>
				</FontString>
				<FontString inherits="GameFontNormal" justifyH="RIGHT" parentKey="SectionText">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="RIGHT"/>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD" setAllPoints="true" parentKey="Highlight">
					<Color r="1" g="1" b="1" a="0.75"/>
				</Texture>
			</Layer>
		</Layers>
	</Button>

	<Frame name="SlashHelpScrollFrame" enableMouse="true" hidden="true">
		<Size x="0" y="418"/>
		<Anchors>
			<Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT">
				<Offset x="3" y="-6"/>
			</Anchor>
			<Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT">
				<Offset x="-3" y="-6"/>
			</Anchor>
		</Anchors>
<!--
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
		</Backdrop>
-->
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="ScrollBar">
					<Size x="2" y="2"/>
					<Anchors>
						<Anchor point="TOPRIGHT">
							<Offset x="-5" y="-6"/>
						</Anchor>
					</Anchors>
					<Color r="1" g="0.75" b="0" a="1"/>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Button inherits="SlashHelpUpButtonTemplate" parentKey="UpButton">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="5" y="-5"/>
					</Anchor>
					<Anchor point="TOPRIGHT">
						<Offset x="-5" y="-5"/>
					</Anchor>
				</Anchors>
			</Button>
			<Button inherits="SlashHelpDownButtonTemplate" parentKey="DownButton">
				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset x="5" y="5"/>
					</Anchor>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="-5" y="5"/>
					</Anchor>
				</Anchors>
			</Button>

			<Frame parentKey="OptionsFrame">
				<Size x="200" y="110"/>
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT">
						<Offset x="-3" y="0"/>
					</Anchor>
				</Anchors>
<!--
				<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<EdgeSize>
						<AbsValue val="16"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="16"/>
					</TileSize>
					<BackgroundInsets>
						<AbsInset left="5" right="5" top="5" bottom="5"/>
					</BackgroundInsets>
				</Backdrop>
-->
				<Layers>
					<Layer level="OVERLAY">
						<FontString inherits="GameFontHighlightSmall" text="排序:">
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset x="8" y="-8"/>
								</Anchor>
							</Anchors>
						</FontString>
						<FontString inherits="GameFontHighlightSmall" text="显示:">
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset x="8" y="-40"/>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<CheckButton inherits="SlashHelpRadioButtonTemplate" parentKey="AlphaSort">
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset x="75" y="-6"/>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnLoad>
								self:SetHitRectInsets(0,-75,0,0)
								self.Text:SetText("Alphabetical");
								self:SetChecked(1);
							</OnLoad>
							<OnClick>
								local parent=self:GetParent();
								parent.GroupSort:SetChecked(0);
								self:SetChecked(1);
								parent:GetParent().Top:ReFilter();
							</OnClick>
						</Scripts>
					</CheckButton>
					<CheckButton inherits="SlashHelpRadioButtonTemplate" parentKey="GroupSort">
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset x="75" y="-20"/>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnLoad>
								self:SetHitRectInsets(0,-75,0,0)
								self.Text:SetText("Group");
							</OnLoad>
							<OnClick>
								local parent=self:GetParent();
								parent.AlphaSort:SetChecked(0);
								self:SetChecked(1);
								parent:GetParent().Top:ReFilter();
							</OnClick>
						</Scripts>
					</CheckButton>

					<CheckButton inherits="SlashHelpCheckButtonTemplate" parentKey="ShowChat">
						<Size x="24" y="24"/>
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset x="50" y="-36"/>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnLoad>
								self.Text:SetText("Chat");
								self.Text:SetTextColor(0,0.75,0);

								self:SetChecked(1);
								self:SetHitRectInsets(0,-100,0,0)
							</OnLoad>
							<OnClick>
								self:GetParent():GetParent().Top:ReFilter();
							</OnClick>
						</Scripts>
					</CheckButton>
					<CheckButton inherits="SlashHelpCheckButtonTemplate" parentKey="ShowNormalCmd">
						<Size x="24" y="24"/>
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset x="50" y="-52"/>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnLoad>
								self.Text:SetText("Command (Normal)");
								self.Text:SetTextColor(0.75,0.5,0);

								self:SetChecked(1);
								self:SetHitRectInsets(0,-100,0,0)
							</OnLoad>
							<OnClick>
								self:GetParent():GetParent().Top:ReFilter();
							</OnClick>
						</Scripts>
					</CheckButton>
					<CheckButton inherits="SlashHelpCheckButtonTemplate" parentKey="ShowSecureCmd">
						<Size x="24" y="24"/>
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset x="50" y="-68"/>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnLoad>
								self.Text:SetText("Command (Secure)");
								self.Text:SetTextColor(0.5,0.5,1);

								self:SetChecked(1);
								self:SetHitRectInsets(0,-100,0,0)
							</OnLoad>
							<OnClick>
								self:GetParent():GetParent().Top:ReFilter();
							</OnClick>
						</Scripts>
					</CheckButton>
					<CheckButton inherits="SlashHelpCheckButtonTemplate" parentKey="ShowEmote">
						<Size x="24" y="24"/>
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset x="50" y="-84"/>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnLoad>
								self.Text:SetText("Emote");
								self.Text:SetTextColor(0.75,0,0.5);

								self:SetChecked(1);
								self:SetHitRectInsets(0,-100,0,0)
							</OnLoad>
							<OnClick>
								self:GetParent():GetParent().Top:ReFilter();
							</OnClick>
						</Scripts>
					</CheckButton>
				</Frames>
				<Scripts>
					<OnLoad>
--						self:SetBackdropBorderColor(TOOLTIP_DEFAULT_COLOR.r, TOOLTIP_DEFAULT_COLOR.g, TOOLTIP_DEFAULT_COLOR.b);
--						self:SetBackdropColor(TOOLTIP_DEFAULT_BACKGROUND_COLOR.r, TOOLTIP_DEFAULT_BACKGROUND_COLOR.g, TOOLTIP_DEFAULT_BACKGROUND_COLOR.b);
					</OnLoad>
				</Scripts>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad>
--				self:SetBackdropBorderColor(TOOLTIP_DEFAULT_COLOR.r, TOOLTIP_DEFAULT_COLOR.g, TOOLTIP_DEFAULT_COLOR.b);
--				self:SetBackdropColor(TOOLTIP_DEFAULT_BACKGROUND_COLOR.r, TOOLTIP_DEFAULT_BACKGROUND_COLOR.g, TOOLTIP_DEFAULT_BACKGROUND_COLOR.b);

				SlashHelp:InitScrollFrame(self);
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>
